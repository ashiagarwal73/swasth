<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb"
    tools:context="com.example.hp.arshiya.first">
    <TextView
        android:id="@+id/txtview1"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Are you here for help?"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#2d417e"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_marginTop="41dp"
        android:text="Patient"
        android:textColor="#fff"
        android:background="#2d417e"
        android:textSize="25dp"
        android:layout_below="@+id/txtview1"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/txtview2"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="60dp"
        android:layout_below="@+id/btn1"
        android:layout_marginTop="55dp"
        android:text="Are you here to help?"
        android:textColor="#2d417e"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_marginTop="60dp"
        android:text="Doctor"
        android:textColor="#fff"
        android:background="#2d417e"
        android:textSize="25dp"
        android:layout_below="@+id/txtview2"
        android:layout_alignStart="@+id/btn1" />
</RelativeLayout>
